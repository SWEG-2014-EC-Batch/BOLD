#include <iostream>
#include <string>
using namespace std;
// to demonstrate function defination, declaration,...

void welcomeMessage() {
    string name;
    cout << "Enter your name"<< endl;
    cin >> name;
    cout << "Hello " << name << "!"<< endl;
    cout << "Welcome to M.P" << endl;
}

int main() {
    welcomeMessage();
    return 0;
}
